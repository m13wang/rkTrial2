<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rk_header2"
    android:orientation="vertical">



    <TextView android:text="Connect To A Ridekick"
    android:id="@+id/TextView01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boxheader"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    />
    


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/whitebox"
    android:orientation="vertical"
     android:gravity="right"
    android:layout_height="wrap_content"
    android:id="@+id/UnitsLayout"
    >
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:background="@drawable/unit_button"
    
	>

	
	    <TextView android:text="Ridekick 1"
	    android:id="@+id/TextView01"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#A34F09"
	    android:textStyle="bold"
	    android:textSize="20dp"
	    android:padding="10dp"
	    />
	
	
	</LinearLayout>


			<Button
			android:text="Add A Ridekick"
			android:id="@+id/Scan"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/android_button"
			android:layout_marginTop="8dp"
			/>
		
</LinearLayout>
	
  
	
	    <TextView android:text="Streaming Data"
    android:id="@+id/TextView01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boxheader"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    />
    


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/whitebox"
    android:orientation="vertical"
     android:gravity="right"
    android:layout_height="wrap_content"
    android:id="@+id/UnitsLayout"
    >
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
     android:gravity="right"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >
    
    	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
       		    <ToggleButton 
	    android:textOff="Streaming Off" 
	    android:textOn="Streaming On" 
	    android:text="@+id/StreamingToggle" 
	    android:id="@+id/StreamingToggle" 
	    android:layout_height="wrap_content" 
	    android:layout_width="wrap_content"
	    />
       	
       	    <TextView android:text="Not Connected"
	   	android:id="@+id/TextView12"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textColor="#000000"
	    />
    

	    </LinearLayout>
	 
    
	    <TextView android:text="Battery"
	   	android:id="@+id/TextView01"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textColor="#000000"
	    />
	    
		<ProgressBar 
			android:id="@+id/BattVoltage"
			style="?android:attr/progressBarStyleHorizontal"
			android:indeterminate="false"
			android:layout_width="match_parent"
			android:layout_height="40dp"
		/>

	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
     android:gravity="right"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >
    
	    <TextView android:text="Throttle"
	   	android:id="@+id/TextView01"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textColor="#000000"
	    />
	    
		<ProgressBar 
			android:id="@+id/ThrottleVoltage"
			style="?android:attr/progressBarStyleHorizontal"
			android:indeterminate="false"
			android:layout_width="match_parent"
			android:layout_height="40dp"
		/>

	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
     android:gravity="right"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >
    
	    <TextView android:text="PWM"
	   	android:id="@+id/TextView01"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textColor="#000000"
	    />
	    
		<ProgressBar 
			android:id="@+id/PWM"
			style="?android:attr/progressBarStyleHorizontal"
			android:indeterminate="false"
			android:layout_width="match_parent"
			android:layout_height="40dp"
		/>

	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
     android:gravity="right"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >
    
	    <TextView android:text="Current"
	   	android:id="@+id/TextView01"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textColor="#000000"
	    />
	    
		<ProgressBar 
			android:id="@+id/Current"
			style="?android:attr/progressBarStyleHorizontal"
			android:indeterminate="false"
			android:layout_width="match_parent"
			android:layout_height="40dp"
		/>

	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
     android:gravity="right"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >
    
	    <TextView android:text="Temperature"
	   	android:id="@+id/TextView01"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textColor="#000000"
	    />
	    
		<ProgressBar 
			android:id="@+id/Temperature"
			style="?android:attr/progressBarStyleHorizontal"
			android:indeterminate="false"
			android:layout_width="match_parent"
			android:layout_height="40dp"
		/>

	</LinearLayout>


		
</LinearLayout>
	
		    <TextView android:text="Errors"
    android:id="@+id/TextViewErrors23"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boxheader"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    />
    


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/whitebox"
    android:orientation="vertical"
     android:gravity="right"
    android:layout_height="wrap_content"
    android:id="@+id/UnitsLayout"
    >
    
   	<TextView android:text="Recent Error Log"
    android:id="@+id/TextViewErrors"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#aaaaaa"
    android:textColor="#000000"
    android:textStyle="bold"
    android:textSize="10px"
    android:minHeight="20dp"
    />
    
   </LinearLayout>
	
	
			    <TextView android:text="Logging"
    android:id="@+id/TextViewLogging"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boxheader"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    />
    


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/whitebox"
    android:orientation="vertical"
     android:gravity="left"
    android:layout_height="wrap_content"
    android:id="@+id/UnitsLayout"
    >
        
        
       <ToggleButton 
	    android:textOff="Logging Off" 
	    android:textOn="Logging On"
	    android:id="@+id/LoggingToggle" 
	    android:layout_height="wrap_content" 
	    android:layout_width="wrap_content"
	    />
	    
    <TextView android:text="Data Points:"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:textStyle="bold"
    android:singleLine="false"
    android:scrollbars="vertical"
	android:id="@+id/DataPoints"
    />
    

    
   </LinearLayout>
	
	
</LinearLayout>


</ScrollView>
